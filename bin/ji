#!/bin/bash
unset IFS
set -eufo pipefail

ji_oh_my_zsh() {
    zsh -ic "${HOME}/.oh-my-zsh/tools/upgrade.sh"
}

ji_snap() {
    sudo snap refresh
}

ji_macos() {
    osascript -e 'tell app "Finder" to empty' >/dev/null 2>&1 ||
        echo 'trash empty'

    brew update
    brew upgrade
    brew autoremove
    brew cleanup
    sudo softwareupdate -ai
}

ji_popos() {
    ji_debian
    pop-upgrade release upgrade

    #
    # Pending idempotence glitches
    #
    # Manually apply a Pop!_OS upgrade:
    #
    # sudo pop-upgrade release upgrade -f
    # sudo reboot
    #
}

ji_ubuntu() {
    ji_debian
    do-release-upgrade -q
}

ji_debian() {
    sudo apt update
    sudo apt upgrade
    sudo apt dist-upgrade
    sudo apt autoremove --purge
    sudo apt autoclean
    dpkg --list |
        grep '^rc' |
        awk '{ print $2 }' |
        sudo xargs dpkg --purge >/dev/null 2>&1 ||
        echo 'dpkg reporting clean'
    sudo apt clean

    if [ -r /var/run/reboot-required ]; then
        printf "Reboot? (Enter: Confirm, Ctrl+C: Cancel) "
        read -r _

        sudo reboot
    fi
}

ji_linux() {
    if command -v snap >/dev/null 2>&1; then
        ji_snap
    fi

    LSB_RELEASE="$(lsb_release -i || echo 'unknown standard base')"

    case "$LSB_RELEASE" in
    *Debian)
        ji_debian
        ;;
    *Pop)
        ji_popos
        ;;
    *Ubuntu)
        ji_ubuntu
        ;;
    *)
        echo 'unknown distribution'
        ;;
    esac
}

if [ -r "${HOME}/.oh-my-zsh" ]; then
    ji_oh_my_zsh
fi

UNAME="$(uname -a)"

case "$UNAME" in
Darwin*)
    ji_macos
    ;;
Linux*)
    ji_linux
    ;;
esac
