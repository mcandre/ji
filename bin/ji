#!/bin/sh
set -euf
unset IFS

ji_oh_my_zsh() {
    zsh -ic 'omz update --unattended'
}

ji_snap() {
    sudo snap refresh
}

ji_macos() {
    osascript -e 'tell app "Finder" to empty' >/dev/null 2>&1 ||
        echo 'trash empty'

    brew update
    brew upgrade
    brew autoremove
    brew cleanup
    sudo softwareupdate -ai
}

ji_popos() {
    ji_debian
    pop-upgrade release upgrade
}

ji_ubuntu() {
    ji_debian
    do-release-upgrade
}

ji_debian() {
    sudo apt-get update
    sudo apt-get upgrade
    sudo apt-get dist-upgrade
    sudo apt-get autoremove --purge
    sudo apt-get autoclean
    dpkg --list |
        grep '^rc' |
        awk '{ print $2 }' |
        sudo xargs dpkg --purge >/dev/null 2>&1 ||
        echo 'dpkg reporting clean'
    sudo apt-get clean

    if [ -r /var/run/reboot-required ]; then
        printf "Reboot? (Enter: Confirm, Ctrl+C: Cancel) "
        read -r _

        sudo reboot
    fi
}

ji_linux() {
    if command -v snap >/dev/null 2>&1; then
        ji_snap
    fi

    LSB_RELEASE="$(lsb_release -i || echo 'unknown standard base')"

    case "$LSB_RELEASE" in
    *Debian)
        ji_debian
        ;;
    *Pop)
        ji_popos
        ;;
    *Ubuntu)
        ji_ubuntu
        ;;
    *)
        echo 'unknown distribution'
        ;;
    esac
}

if [ -r "${HOME}/.oh-my-zsh" ]; then
    ji_oh_my_zsh
fi

UNAME="$(uname -a)"

case "$UNAME" in
Darwin*)
    ji_macos
    ;;
Linux*)
    ji_linux
    ;;
esac
